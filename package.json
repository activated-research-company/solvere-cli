  "license": "MIT",
  "bugs": {
    "url": "https://github.com/activated-research-company/solvere-cli/issues"
  },
  "homepage": "https://github.com/activated-research-company/solvere-cli#readme",
  "dependencies": {
    "chalk": "^4.0.0",
    "commander": "^5.0.0",
    "figlet": "^1.3.0",
    "inquirer": "^7.1.0",
    "phidget22": "^2.6.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "serialport": "^8.0.7"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^13.11.1",
    "@types/serialport": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "nodemon": "^2.0.3",
    "ospec": "^4.1.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  }
}
