{
  "name": "solvere-cli",
  "version": "1.0.0",
  "description": "command line interface for configuring solvere components",
  "main": "./dist/index.js",
  "bin": {
    "solvere": "./dist/index.js"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint './src/**/*.{js,ts,tsx}' --quiet --fix",
    "start": "./node_modules/.bin/ts-node src/index",
    "nodemon": "./node_modules/.bin/nodemon -I --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activated-research-company/solvere-cli.git"
  },
